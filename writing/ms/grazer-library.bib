@article{Mouillot2016,
abstract = {Although coral reefs support the largest concentrations of
marine biodiversity worldwide, the extent to which the global
system of marine-protected areas (MPAs) represents individual
species and the breadth of evolutionary history across the Tree
of Life has never been quantified. Here we show that only 5.7{\%}
of scleractinian coral species and 21.7{\%} of labrid fish species
